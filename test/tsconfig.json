{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "node-forge/types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "plugins": [{ "transform": "@tymon/rtti" }]
  },
  "include": ["src/**/*", "typings/**/*.d.ts"]
}
